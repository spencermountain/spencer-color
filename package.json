  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "babelify": "10.0.0",
    "derequire": "2.0.6",
    "budo": "11.5.0",
    "uglify-js": "3.4.9"
  }
