{
  "name": "spencer-color",
  "version": "0.0.5",
  "description": "spencer likes these colors",
  "main": "./builds/spencer-color.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "budo scratch.js:assets/bundle.js --live",
